PORT=3000
DATA_DIR=~/.molibot
RATE_LIMIT_PER_MINUTE=30
MAX_MESSAGE_CHARS=4000
MOLIBOT_SYSTEM_PROMPT=You are Molibot, a concise and helpful assistant.

# Telegram
TELEGRAM_BOT_TOKEN=
# Optional: comma-separated chat IDs whitelist, e.g. 123456789,-1001234567890
TELEGRAM_ALLOWED_CHAT_IDS=
# Voice transcription (OpenAI-compatible /audio/transcriptions)
TELEGRAM_STT_BASE_URL=https://api.openai.com/v1
TELEGRAM_STT_API_KEY=
TELEGRAM_STT_MODEL=whisper-1
# Optional: e.g. zh / en
TELEGRAM_STT_LANGUAGE=
TELEGRAM_STT_PROMPT=

# AI provider mode: pi | custom
AI_PROVIDER_MODE=pi

# pi-mono mode
PI_MODEL_PROVIDER=anthropic
PI_MODEL_NAME=claude-sonnet-4-20250514
ANTHROPIC_API_KEY=
OPENAI_API_KEY=
GOOGLE_GENERATIVE_AI_API_KEY=

# custom mode (OpenAI-compatible API)
CUSTOM_AI_BASE_URL=
CUSTOM_AI_API_KEY=
CUSTOM_AI_MODEL=
CUSTOM_AI_PATH=/v1/chat/completions
